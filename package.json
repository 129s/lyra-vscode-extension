{
  "name": "lyra-extension",
  "displayName": "Lyra Language Support",
  "description": "Structured Music Mark Language",
  "version": "0.0.1",
  "main": "./out/src/extension.js",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "command": "lyra.toggleBlocks",
        "title": "Toggle Block Display"
      },
      {
        "command": "lyra.playCurrentBlock",
        "title": "Play Current Block"
      },
      {
        "command": "lyra.playGlobal",
        "title": "Play Global"
      }
    ],
    "keybindings": [
      {
        "command": "lyra.toggleBlocks",
        "key": "F4",
        "when": "editorTextFocus"
      },
      {
        "command": "lyra.playCurrentBlock",
        "key": "F5",
        "when": "editorTextFocus"
      },
      {
        "command": "lyra.playGlobal",
        "key": "F6",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "lyra",
        "aliases": [
          "Lyra",
          "lyra"
        ],
        "extensions": [
          ".lyra"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lyra",
        "scopeName": "source.lyra",
        "path": "./syntaxes/lyra.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "midi-player-js": "^2.0.16",
    "midi-writer-js": "^3.1.1",
    "package": "^1.0.1",
    "soundfont-player": "^0.12.0",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  }
}
